<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TrackCalory.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TrackCalory.MainPage"
             Title="Трекер калорій"
             BackgroundColor="#d6d1d3"
              Shell.BackgroundColor="#f4becb"
             Shell.ForegroundColor="#aff3c0">

    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel x:Name="ViewModel"/>
    </ContentPage.BindingContext>
    
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior 
            StatusBarColor="#f4becb"     
            StatusBarStyle="DarkContent" />
    </ContentPage.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок з навігацією по датах -->
        <Frame Grid.Row="0" 
               BackgroundColor="White"
               BorderColor="#d2cbcd"
               HasShadow="False"
               Padding="12"
               >
            <StackLayout Spacing="8">

                <!-- Вибрана дата (клікабельна) -->
                <Button Text="{Binding SelectedDateFormatted}"
                    ImageSource="calendarcropv3.png"
                    MaximumHeightRequest="45"
                    ContentLayout="Left, 10"
                    BackgroundColor="#aff3c0"
                    TextColor="#694f55"
                    FontSize="15"
                    HorizontalOptions="Center"
                    BorderWidth="0"
                    BorderColor="#dad7d8"
                    CornerRadius="25"
                    Command="{Binding ShowDatePickerCommand}">
                </Button>

                <!-- Навігація по датах -->
                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Ліва стрілка -->
                        <ColumnDefinition Width="*"/>
                        <!-- Дата та калорії -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Права стрілка -->
                    </Grid.ColumnDefinitions>

                    <!-- Ліва стрілка (попередній день) -->
                    <Button Grid.Column="0"
                            Text="←"
                            FontSize="30"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            BorderColor="Transparent"
                            BorderWidth="0"
                            TextColor="#5fd37c"
                            WidthRequest="50"
                            HeightRequest="50"
                            Padding="0,0,5,-5"
                            Command="{Binding PreviousDayCommand}"/>

                    <!-- Центральна частина: дата та калорії -->
                    <StackLayout Grid.Column="1" 
                                HorizontalOptions="Center"
                                VerticalOptions="Center">

                        <!-- Калорії за вибрану дату -->
                        <Frame CornerRadius="18" 
                               HorizontalOptions="CenterAndExpand"
                               Padding="15" 
                               Margin="0,0,5,2"
                               BorderColor="#f4becb"
                               BackgroundColor="#fff5f7">
                            <Label Text="{Binding SelectedDateCalories, StringFormat='Всього: {0:F0} kkal'}"
                               FontSize="21"
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="#e1607e"
                               Margin="0,5,0,0"/>
                        </Frame>
                        <!-- Денна норма та прогрес -->
                        <Label Text="{Binding DailyGoal, StringFormat='🎯 Денна норма: {0:F0} ккал'}"
                              FontSize="12"
                               FontAttributes="Bold"
                              HorizontalOptions="Center"
                              TextColor="#7F8C8D"/>

                        <Label Text="{Binding RemainingCaloriesFormatted}"
                              FontSize="12"
                              HorizontalOptions="Center"
                              TextColor="#dad7d8"
                              Margin="0,15,0,-5"/>
                        
                        <!-- Прогрес бар -->
                        <ProgressBar Progress="{Binding ProgressPercentage}"
                              ProgressColor="#27AE60"
                              HeightRequest="10"
                              Margin="20,5,20,0"
                                     />
                        
                    </StackLayout>
                    
                    <!-- Права стрілка (наступний день) -->
                    <Button Grid.Column="2"
                            Text="→"
                            FontSize="30"
                            FontAttributes="Bold"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            BorderWidth="0"
                            TextColor="#5fd37c"
                            WidthRequest="50"
                            HeightRequest="50"
                            Padding="0,0,0,0"
                            Command="{Binding NextDayCommand}"/>
                </Grid>

                <!-- Індикатор: сьогодні/інша дата -->
                <Label Text="{Binding DateIndicator}"
                       FontSize="12"
                       FontAttributes="Italic"
                       HorizontalOptions="Center"
                       TextColor="#27AE60"
                       Margin="0,0,0,0"/>
            </StackLayout>
        </Frame>

        <!-- Список записів ЗА ВИБРАНУ ДАТУ -->
        <CollectionView Grid.Row="1" 
                       ItemsSource="{Binding FilteredEntries}"
                       BackgroundColor="#dad7d8"
                       Margin="0,5,0,0">
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" 
                            VerticalOptions="Center"
                            Padding="50">
                    <Image Source="strawberryv2.png"
                           MaximumHeightRequest="120"
                           Opacity="0.2"
                        />
                    <Label Text="Немає записів за цю дату"
                           Opacity="0.8"
                           FontSize="16"
                           FontAttributes="Italic"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding SelectedDateFormatted}"
                           Opacity="0.8"
                           FontSize="10"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>

        <!-- Самі списки -->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" 
                           CornerRadius="10" 
                           Padding="0" 
                           Margin="10,5" 
                           BackgroundColor="White">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={x:Reference ViewModel}, Path=DetailCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <!-- Фото (якщо є) -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Текст -->
                                <ColumnDefinition Width="*"/>
                                <!-- Калорії -->
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- ФОТО СТРАВИ (ліворуч) -->
                            <Frame Grid.Column="0"
                                   IsVisible="{Binding HasPhoto}"
                                   CornerRadius="8"
                                   Padding="0"
                                   Margin="0,0,10,0"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   HasShadow="False">
                                <Image Source="{Binding PhotoPath}"
                                       Aspect="AspectFill"
                                       WidthRequest="70"
                                       HeightRequest="70"/>
                            </Frame>

                            <!-- ІНФОРМАЦІЯ ПРО СТРАВУ -->
                            <StackLayout Grid.Column="1"
                                        VerticalOptions="Center"
                                        Spacing="3">
                                <!-- Назва страви -->
                                <Label Text="{Binding Description}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>

                                <!-- Час прийому їжі -->
                                <Label Text="{Binding Date, StringFormat='⏰ {0:HH:mm}'}"
                                       FontSize="12"
                                       TextColor="Gray"/>

                                <!-- Категорія -->
                                <Label Text="{Binding Category, StringFormat='🍽️ {0}'}"
                                       FontSize="12"
                                       TextColor="#9fc1a8"/>

                                <!-- БЖУ (якщо є) -->
                                <Label IsVisible="{Binding Protein}"
                                       FontSize="10"
                                       TextColor="#95A5A6">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Б: "/>
                                            <Span Text="{Binding Protein, StringFormat='{0:F1}г'}"/>
                                            <Span Text=" | Ж: "/>
                                            <Span Text="{Binding Fat, StringFormat='{0:F1}г'}"/>
                                            <Span Text=" | В: "/>
                                            <Span Text="{Binding Carbs, StringFormat='{0:F1}г'}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </StackLayout>

                            <!-- КАЛОРІЇ (праворуч) -->
                            <StackLayout Grid.Column="2"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Spacing="0">
                                <Label Text="{Binding Calories, StringFormat='{0:F0}'}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#e1607e"
                                       HorizontalOptions="End"/>
                                <Label Text="ккал"
                                       FontSize="12"
                                       TextColor="#e1607e"
                                       HorizontalOptions="End"
                                       Margin="0,-5,0,0"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Кнопка додавання -->
        <Frame Grid.Row="2" 
               BackgroundColor="Transparent"
               Padding="7,7">
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Border HeightRequest="60"
                    StrokeShape="RoundRectangle 30"
                    Margin="0,0,0,0"
                    Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="1,1">
                            <GradientStop Color="#f4becb" Offset="0.28"/>
                            <GradientStop Color="#9dd392" Offset="0.6"/>
                            <GradientStop Color="#5fd37c" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Button Text="Розпізнати калорії з AI"
                            ImageSource="robot42x52.png"
                            MaximumHeightRequest="60"
                            ContentLayout="Left, 10"
                            Grid.Column="0"
                            TextColor="White"
                            BorderColor="Transparent"
                            BorderWidth="0"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="60"
                            CornerRadius="30"
                            BackgroundColor="Transparent"
                            Command="{Binding AddEntryAICommand}">
                    </Button>
                </Border>

                <ImageButton Source="plus42x42.png"
                        Grid.Column="1"
                        BackgroundColor="#5fd37c"
                        HeightRequest="60"
                        WidthRequest="65" 
                        CornerRadius="22"
                        Command="{Binding AddEntryCommand}"
                        Padding="9" Aspect="AspectFit" />
            </Grid>
        </Frame>
    </Grid>

</ContentPage>
