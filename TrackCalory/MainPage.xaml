<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TrackCalory.ViewModels"
             x:Class="TrackCalory.MainPage"
             Title="Калорії"
             BackgroundColor="LightGray">

    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel x:Name="ViewModel"/>
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок та загальна кількість калорій за сьогодні -->
        <StackLayout Grid.Row="0" Padding="20" BackgroundColor="#E3F2FD">
            <Label Text="Трекер калорій" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <Label Text="{Binding TodayTotal, StringFormat='Сьогодні: {0:F0} ккал'}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1976D2"
                   Margin="0,10,0,0"/>
        </StackLayout>

        <!-- Список записів -->
        <CollectionView Grid.Row="1" 
                       ItemsSource="{Binding Entries}"
                       BackgroundColor="LightGray">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" 
                           CornerRadius="10" 
                           Padding="15" 
                           Margin="10,5" 
                           BackgroundColor="White"
                           >
                        <Frame.GestureRecognizers>
                            <!-- передаємо конкретний запис як параметр -->
                            <TapGestureRecognizer 
                                Command="{Binding Source={x:Reference ViewModel}, Path=DetailCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        <Grid Padding="15,10" BackgroundColor="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding Description}"
                               FontSize="16"
                               FontAttributes="Bold"/>

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="{Binding Date, StringFormat='{0:dd.MM.yyyy HH:mm}'}"
                               FontSize="12"
                               TextColor="Gray"/>

                        <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                               Text="{Binding Calories, StringFormat='{0:F0} ккал'}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="#4CAF50"/>

                        <!-- Розділювальна лінія -->
                        <BoxView Grid.Row="1" Grid.ColumnSpan="2"
                                BackgroundColor="LightGray"
                                HeightRequest="1"
                                Margin="0,20,0,0"/>
                    </Grid>
                   </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Кнопка додавання -->
        <Button Grid.Row="2"
                Text="+ Додати запис"
                BackgroundColor="YellowGreen"
                TextColor="White"
                FontSize="18"
                HeightRequest="60"
                Margin="40,10"
                Command="{Binding AddEntryCommand}"/>
    </Grid>

</ContentPage>
