<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrackCalory.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrackCalory"
    xmlns:views="clr-namespace:TrackCalory.Views"
    Title="CalorieTracker"
    BackgroundColor="LightSteelBlue">

    <ShellContent Title="Головна"
                  ContentTemplate="{DataTemplate local:MainPage}" />

    <ShellContent Title="Додати"
                  ContentTemplate="{DataTemplate views:AddEntryPage}"
                  Route="AddEntryPage" />
    
</Shell>
