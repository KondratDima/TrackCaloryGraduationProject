<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrackCalory.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrackCalory"
    xmlns:views="clr-namespace:TrackCalory.Views"
    Title="CalorieTracker"
    Shell.BackgroundColor="#f4becb"
    Shell.ForegroundColor="#aff3c0"
    Shell.TitleColor="White"
    BackgroundColor="#f4becb"
    TabBarForegroundColor="#f4becb"
    >

    <ShellContent Title="Трекер калорій"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage"
                  />

    <ShellContent Title="Додати"
                  ContentTemplate="{DataTemplate views:AddEntryPage}"
                  Route="AddEntryPage" />
    <ShellContent Title="Налаштування"
                  ContentTemplate="{DataTemplate views:UserProfileSetupPage}"
                  Route="UserProfileSetupPage"/>
    
</Shell>
