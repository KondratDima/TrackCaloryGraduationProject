<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<!-- Головна тема додатку - СВІТЛА -->
	<style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Колір статус-бару (верхня панель з годинником) -->
		<item name="android:statusBarColor">#f4becb</item>

		<!-- Колір навігаційної панелі (кнопки внизу) -->
		<item name="android:navigationBarColor">#FFFFFF</item>

		<!-- Світлі іконки статус-бару (для світлого фону) -->
		<item name="android:windowLightStatusBar">true</item>

		<!-- Світлі іконки навігаційної панелі (для світлого фону) -->
		<item name="android:windowLightNavigationBar">true</item>

		<!-- Колір фону вікна -->
		<item name="android:windowBackground">@android:color/white</item>

		<!-- Основні кольори додатку -->
		<item name="colorPrimary">#f4becb</item>
		<item name="colorPrimaryDark">#e1607e</item>
		<item name="colorAccent">#5fd37c</item>
		
		<!-- ВИМИКАЄМО ВСІХ ОВЕРЛЕЇ -->
		<item name="colorControlHighlight">@android:color/transparent</item>
		<item name="android:colorControlHighlight">@android:color/transparent</item>
		<item name="colorOnSurface">#000000</item>
		<item name="colorSurface">#FFFFFF</item>
		
		<!-- КРИТИЧНО: вимикаємо state overlay -->
		<item name="materialButtonStyle">@style/Widget.App.Button</item>
		<item name="android:buttonStyle">@style/Widget.App.Button</item>
		
		<!-- ВИМИКАЄМО темний режим -->
		<item name="android:forceDarkAllowed">false</item>
	
	</style>
	<!-- СТИЛЬ ДЛЯ КНОПОК БЕЗ ТЕМНОГО ОВЕРЛЕЮ -->
	<style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
		<item name="android:stateListAnimator">@null</item>
		<item name="rippleColor">@android:color/transparent</item>
	</style>
</resources>